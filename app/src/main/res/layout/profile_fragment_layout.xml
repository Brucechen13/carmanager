<?xml version="1.0" encoding="utf-8"?>
<!--一级界面"我"-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fra_mine_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--账号登录的头像-->
        <LinearLayout
            android:id="@+id/fra_mine_user_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fra_mine_item_bg_color"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fra_mine_user_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:onClick="onClick"
                android:src="@mipmap/user_default_common" />

            <TextView
                android:id="@+id/fra_mine_user_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="立即登录"
                android:layout_marginBottom="12dp"
                android:textColor="@color/black_title_color"
                android:textSize="18sp" />
        </LinearLayout>
        <!--我的收藏-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/fra_mine_item_margin_vertical"
            android:background="@color/fra_mine_item_bg_color"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/fra_mine_item_padding_horizontal"
            android:paddingRight="@dimen/fra_mine_item_padding_horizontal"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ahlib_icon_collection_p2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black_title_color"
                android:text="@string/setting_save"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more"/>
        </LinearLayout>
        <!--设置-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/fra_mine_item_padding_horizontal"
            android:paddingRight="@dimen/fra_mine_item_padding_horizontal"
            android:layout_marginTop="@dimen/fra_mine_item_margin_vertical"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/fra_mine_item_bg_color">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ahlib_icon_collection_p2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/black_title_color"
                android:text="@string/setting"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_more"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>