<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/dimen_size_10dp"
    android:paddingLeft="@dimen/dimen_size_10dp"
    android:paddingRight="@dimen/dimen_size_10dp">
    <TextView
        android:id="@+id/company_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textSize_normal"
        android:textColor="@color/black_title_color"
        android:text="北京中捷奥迪"/>
    <TextView
        android:id="@+id/company_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/micro_text_size"
        android:textColor="@color/gray_text"
        android:text="花香大道119" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/call_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/micro_text_size"
            android:textColor="@color/gray_text"
            android:gravity="center"
            android:text="拨打电话" />
        <TextView
            android:id="@+id/nav_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/micro_text_size"
            android:textColor="@color/gray_text"
            android:gravity="center"
            android:text="导航去这" />
    </LinearLayout>

</LinearLayout>