<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/tab_top_background</item>
        <item name="colorPrimaryDark">@color/tab_top_background</item>
        <item name="android:windowBackground">@color/tab_background</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="AppTheme.Image" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000</item>
        <item name="colorPrimaryDark">@color/tab_top_background</item>
        <item name="android:windowBackground">@color/tab_background</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.WithBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 登录注册样式 -->
    <style name="login_edit_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textColorHint">#969696</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:drawableRight">@mipmap/ic_delete_grey</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

</resources>
